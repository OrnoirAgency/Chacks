<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/_8sdp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatarIv"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_centerVertical="true"
        android:src="@drawable/profile_image"
        app:layout_constraintStart_toStartOf="@+id/pTextTv_text"
        app:layout_constraintTop_toBottomOf="@+id/pTextTv_text" />

    <TextView
        android:id="@+id/nameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/abel"

        android:text="Username"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/avatarIv"
        app:layout_constraintTop_toTopOf="@+id/avatarIv" />


    <TextView
        android:id="@+id/commentTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:background="@drawable/draw_coment"
        android:fontFamily="@font/abel"
        android:lineSpacingExtra="-1sp"
        android:maxWidth="@dimen/_200sdp"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:text="Comment"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintStart_toEndOf="@+id/avatarIv"
        app:layout_constraintTop_toBottomOf="@+id/nameTv" />

    <TextView
        android:id="@+id/timeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:background="@drawable/commentbg"
        android:fontFamily="@font/abel"
        android:text="Blog Post Date"
        android:textColor="@color/whiteWhite"
        android:textSize="@dimen/_7sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/commentTv"
        app:layout_constraintTop_toBottomOf="@+id/commentTv" />


</androidx.constraintlayout.widget.ConstraintLayout>